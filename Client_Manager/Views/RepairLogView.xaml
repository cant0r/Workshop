<Window x:Class="Client_Manager.RepairJobLogView"
        xmlns:uc="clr-namespace:Client_Manager.CustomControls"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Client_Manager"
        mc:Ignorable="d"
        Title="RepairLogViewer"
        Height="Auto" Width="1200" Background="#189ab4" Closing="Window_Closing">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"></RowDefinition>
            <RowDefinition Height="8*"></RowDefinition>
        </Grid.RowDefinitions>

        <Label x:Name="repairJobIDlbl" Height="Auto" Width="Auto" Grid.Column="0" Grid.Row="0" Content="HALLO"
               FontWeight="Bold" FontSize="36pt" Foreground="LightCyan"></Label>
        <ScrollViewer Grid.Row="1" Grid.Column="0" Height="Auto" Width="Auto">
            <StackPanel  x:Name="logEntryPanel">
                
            </StackPanel>
        </ScrollViewer>
        
    </Grid>
</Window>
