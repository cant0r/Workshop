<Window x:Class="Client_Manager.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Client_Manager"
        mc:Ignorable="d"
        Title="ManagerClient" Height="600" Width="800"
        Background="#7ec8e3"
        Closing="Window_Closing">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"></ColumnDefinition>
            <ColumnDefinition Width="*"></ColumnDefinition>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"></RowDefinition>
        </Grid.RowDefinitions>
        <Button Grid.Column="0" Grid.Row="0" Content="Adatbázis"      
                Margin="10 200 10 200" x:Name="databaseBtn"
                Click="databaseBtn_Click"
                ></Button>
        <Button Grid.Column="1" Grid.Row="0"  Content="Új Szerelés"              
                Margin="10 200 10 200" x:Name="newrepairBtn"
                Click="newrepairBtn_Click"></Button>
    </Grid>
        
</Window>
